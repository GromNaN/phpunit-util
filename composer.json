{
    "name": "amphp/phpunit-util",
    "homepage": "http://amphp.org/phpunit-util",
    "description": "Helper package to ease testing with PHPUnit.",
    "license": "MIT",
    "authors": [
        {
            "name": "Niklas Keller",
            "email": "me@kelunik.com"
        },
        {
            "name": "Aaron Piotrowski",
            "email": "aaron@trowski.com"
        }
    ],
    "support": {
        "issues": "https://github.com/amphp/phpunit-util/issues",
        "irc": "irc://irc.freenode.org/amphp"
    },
    "require": {
        "php": ">=8",
        "ext-json": "*",
        "phpunit/phpunit": "^9"
    },
    "require-dev": {
        "amphp/amp": "^3-dev",
        "amphp/php-cs-fixer-config": "dev-master",
        "revolt/event-loop": "^1-dev"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "git@github.com:revolt-php/event-loop.git"
        }
    ],
    "autoload": {
        "psr-4": {
            "Amp\\PHPUnit\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\PHPUnit\\Test\\": "test"
        }
    }
}
